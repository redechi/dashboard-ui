<img src="/assets/img/blurrydash@2x.jpg" id="blurrydash">

<div id="login">
  <div id="loginDemo">
    <div class="topBox">
      <h1>Explore your trips and driving data.</h1>
      <a href="?playground" class="btn btn-blue btn-block">Try the demo</a>
      <p>Have an Automatic account?  <a href="#" class="toggleLoginForm">Log in</a></p>
    </div>

    <div class="middleBox">
      <h2>Automatic upgrades your car to a connected car.</h2>
      <div class="graphicLink"></div>
      <ul class="featureList">
        <li class="savebig">Drive smarter, save big</li>
        <li class="check">Clear your check engine light</li>
        <li class="map">Never forget where you parked</li>
        <li class="crashalert">Get help in a crash</li>
      </ul>
    </div>
    <div class="bottomBox">
      <div class="smallLogo"></div>
      <a href="http://automatic.com">Learn more</a>
    </div>
  </div>
  <div id="loginForm">
    <h1>Log in to your account</h1>
    <a href="#" class="toggleLoginForm back">Back</a>
    <form role="form">
      <div class="form-group">
        <input type="text" class="form-control" id="email" placeholder="Email Address" spellcheck="false">
      </div>
      <div class="form-group">
        <input type="password" class="form-control" id="password" placeholder="Password">
      </div>
      <div class="alert alert-grey invisible" role="alert"></div>
      <div class="form-group">
        <label><input type="checkbox" checked class="staySignedIn"> Keep me signed in</label>
      </div>
      <button type="submit" class="btn btn-blue btn-block">Login</button>
    </form>
    <div class="forgotPassword">
      Forgot your password? <a href="#reset" class="forgotPasswordLink">Reset it</a>
    </div>
  </div>
</div>
