  <form role="form" id="passwordResetForm">
    <h1>Reset Your Password</h1>
    <p>Passwords must be at least 8 characters</p>
    <div class="form-group">
      <input type="password" class="form-control" id="password" placeholder="New Password">
    </div>
    <div class="form-group">
      <input type="password" class="form-control" id="passwordRepeat" placeholder="Repeat New Password">
    </div>
    <div class="alert invisible alert-grey" role="alert"></div>
    <button type="submit" class="btn btn-blue btn-block">Reset Password</button>
  </form>
</div>
