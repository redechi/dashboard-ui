---
  root: true
  extends:
    airbnb
  parser: babel-eslint
  env:
    browser: true
    node: true
    protractor: true
    jasmine: true
    mocha: true
    es6: true
  rules:
    comma-dangle:
      - 2
      - "never"
    no-console: 0
    no-param-reassign: 0
    space-before-function-paren: 0
    max-len: [1, 120, 2]
    arrow-parens: 0
    new-parens: 0
    newline-per-chained-call: 0
    consistent-return: 0
    no-confusing-arrow: 0
    no-plusplus: 0
    no-mixed-operators: 0
    no-underscore-dangle: 0
    import/extensions: 0
    no-restricted-properties: 0
    import/first: 0
    import/newline-after-import: 0
    import/no-extraneous-dependencies: 0
    import/prefer-default-export: 0
  globals:
    Modernizr: true
